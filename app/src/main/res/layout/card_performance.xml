<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sites_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineAmbientShadowColor="@color/purple_500"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/textlines"
            android:fontFamily="@font/architects_daughter"
            android:text="Sites (Today's so far)"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <TextView
                android:id="@+id/website_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:fontFamily="@font/mclaren"
                android:gravity="center"
                android:text="Website"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/estimation_cost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:fontFamily="@font/mclaren"
                android:gravity="center"
                android:text="Estimation Cost"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/page_views"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:fontFamily="@font/mclaren"
                android:gravity="center"
                android:text="Page Views"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/click_counts"
                android:layout_width="0dp"
                android:fontFamily="@font/mclaren"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="Clicks"
                android:textStyle="bold" />


        </LinearLayout>

        <ListView
            android:id="@+id/userlist"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scrollbars="vertical"
            android:outlineAmbientShadowColor="@color/black" />
    </LinearLayout>

</androidx.cardview.widget.CardView>