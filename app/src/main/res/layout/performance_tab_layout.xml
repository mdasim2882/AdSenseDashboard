<?xml version="1.0" encoding="utf-8"?>

<androidx.viewpager.widget.ViewPager xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:focusable="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/MyTabAppearance"
        android:backgroundTint="@color/purple_500"
        app:tabIndicatorColor="@color/light_yellow"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/light_yellow"
        app:tabPaddingBottom="5dp"
        app:tabMode="fixed" />
</androidx.viewpager.widget.ViewPager>
